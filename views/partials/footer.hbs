<div class="container mx-auto text-center space-y-4">
    <!-- Título de la empresa -->
    <h2 class="text-2xl font-bold">Airlink Solutions</h2>

    {{#if isAuthenticated}}
      <!-- Enlaces rápidos -->
      <div class="flex justify-center space-x-6">
        <a href="/" class="text-gray-400 hover:text-white transition duration-300">Inicio</a>
        <a href="/servicios" class="text-gray-400 hover:text-white transition duration-300">Servicios</a>
        <a href="/contacto" class="text-gray-400 hover:text-white transition duration-300">Contacto</a>
        <a href="/acerca" class="text-gray-400 hover:text-white transition duration-300">Acerca de</a>
      </div>

      <!-- Iconos sociales -->
      <div class="flex justify-center space-x-6">
        <a href="https://facebook.com" target="_blank" class="text-gray-400 hover:text-blue-500 transition duration-300">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="https://twitter.com" target="_blank" class="text-gray-400 hover:text-blue-400 transition duration-300">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://linkedin.com" target="_blank" class="text-gray-400 hover:text-blue-600 transition duration-300">
          <i class="fab fa-linkedin-in"></i>
        </a>
        <a href="https://instagram.com" target="_blank" class="text-gray-400 hover:text-pink-500 transition duration-300">
          <i class="fab fa-instagram"></i>
        </a>
      </div>
    {{else}}
      <!-- Mensaje si no está autenticado -->
      <p class="text-gray-400 text-sm">
        Inicia sesión para acceder a más funcionalidades.
      </p>
    {{/if}}

    <!-- Derechos reservados -->
    <p class="text-gray-400 text-sm">
      &copy; {{currentYear}} Airlink Solutions. Todos los derechos reservados.
    </p>
  </div>