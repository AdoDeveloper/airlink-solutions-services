
<div class="container mx-auto flex justify-between items-center px-6">
        <h1 class="text-2xl font-bold">Airlink Solutions</h1>
        <div class="flex items-center space-x-4">
          <button onclick="toggleTheme()" class="text-white dark:text-gray-300 hover:text-yellow-400 focus:outline-none">
            <i class="fas fa-adjust"></i>
          </button>
          {{#if isAuthenticated}}
          <!-- Mostrar enlaces solo si el usuario está autenticado -->
          <nav class="hidden sm:flex space-x-4">
            <a href="/" class="hover:underline">Inicio</a>
            <a href="/servicios" class="hover:underline">Servicios</a>
            <a href="/api-docs" class="hover:underline">API</a>
            <a href="/logout" class="hover:underline">Cerrar Sesión</a>
          </nav>
          {{else}}
          <!-- Mostrar un enlace de inicio de sesión si el usuario no está autenticado -->
          <a href="/login" class="hover:underline text-sm">Iniciar Sesión</a>
          {{/if}}
        </div>
      </div>